<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_buy_tickets"
    app:startDestination="@id/navigation_search">

    <fragment
        android:id="@+id/navigation_search"
        android:name="kz.busjol.ui.search_trip.SearchTripFragment"
        tools:layout="@layout/fragment_search_trip" >
        <action
            android:id="@+id/action_navigation_search_to_cityPickerDialog"
            app:destination="@id/navigation_city_picker_dialog" />
        <action
            android:id="@+id/action_navigation_search_to_nav_buy_tickets"
            app:destination="@id/navigation_trip_fragment"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"/>
        <action
            android:id="@+id/action_navigation_search_to_navigation_quantity_dialog"
            app:destination="@id/navigation_quantity_dialog" />

    </fragment>

    <dialog
        android:id="@+id/navigation_city_picker_dialog"
        android:name="kz.busjol.ui.search_trip.CityPickerDialog"
        tools:layout="@layout/dialog_city_selector">

        <argument
            android:name="cityList"
            app:argType="kz.busjol.data.City[]"/>

        <argument
            android:name="fromOrToCity"
            app:argType="string"/>

    </dialog>

    <fragment
        android:id="@+id/navigation_trip_fragment"
        android:name="kz.busjol.ui.trip.TripFragment"
        tools:layout="@layout/fragment_trip"
        android:label="TripFragment" >

        <argument
            android:name="cities"
            app:argType="string[]" />
        <argument
            android:name="date"
            app:argType="string"/>
        <action
            android:id="@+id/action_navigation_trip_fragment_to_navigation_bus_plan"
            app:destination="@id/navigation_bus_plan"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"/>

    </fragment>

    <dialog
        android:id="@+id/navigation_quantity_dialog"
        android:name="kz.busjol.ui.search_trip.PassengerQuantityDialog"
        tools:layout="@layout/dialog_passenger_quantity"
        android:label="PassengerQuantityDialog">

        <argument
            android:name="adultsQuantity"
            app:argType="integer" />

        <argument
            android:name="childQuantity"
            app:argType="integer" />

        <argument
            android:name="disabledQuantity"
            app:argType="integer" />

    </dialog>

    <fragment
        android:id="@+id/navigation_bus_plan"
        android:name="kz.busjol.ui.bus_plan.BusPlanFragment"
        tools:layout="@layout/fragment_bus_plan"
        android:label="BusPlanFragment">

        <argument
            android:name="trip_type"
            app:argType="string"/>

    </fragment>

</navigation>