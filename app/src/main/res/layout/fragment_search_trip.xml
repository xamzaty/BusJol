<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.search_trip.SearchTripFragment">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/search_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_17sdp"
            android:layout_marginStart="@dimen/_12sdp"
            android:layout_marginEnd="@dimen/_8sdp"
            android:textAlignment="textStart"
            android:textSize="@dimen/_16sdp"
            android:text="@string/app_name"
            android:textColor="@color/bolder_text"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/search_banner"
            android:layout_width="0dp"
            android:layout_height="@dimen/_130sdp"
            android:src="@drawable/banner2"
            android:scaleType="fitCenter"
            android:layout_marginEnd="@dimen/_12sdp"
            app:layout_constraintTop_toBottomOf="@id/search_title"
            android:layout_marginTop="@dimen/_25sdp"
            app:layout_constraintStart_toStartOf="@id/search_title"
            app:layout_constraintEnd_toEndOf="parent"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@id/search_banner"
            app:layout_constraintStart_toStartOf="@id/search_banner"
            android:text="@string/main_subtitle"
            android:textSize="@dimen/_13sdp"
            android:textColor="@color/white"
            android:layout_marginBottom="@dimen/_13sdp"
            android:layout_marginStart="@dimen/_13sdp"/>

    <FrameLayout
        android:id="@+id/from_city_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_53sdp"
        android:layout_marginTop="@dimen/_25sdp"
        android:background="@drawable/ic_from_city_layout"
        android:layout_marginStart="@dimen/_12sdp"
        android:layout_marginEnd="@dimen/_12sdp"
        app:layout_constraintEnd_toEndOf="@id/search_banner"
        app:layout_constraintStart_toStartOf="@id/search_banner"
        app:layout_constraintTop_toBottomOf="@id/search_banner">

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="#00000000"
            android:hint="@string/from">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/from_city_et"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#00000000"
                android:cursorVisible="false"
                android:inputType="textNoSuggestions"
                android:textColor="@color/black"
                android:textSize="@dimen/_13sdp"
                app:boxBackgroundMode="none" />

        </com.google.android.material.textfield.TextInputLayout>

        <View
            android:id="@+id/open_from_cities_dialog"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </FrameLayout>

        <FrameLayout
            android:id="@+id/to_city_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_53sdp"
            android:layout_marginTop="@dimen/_minus2sdp"
            android:layout_marginStart="@dimen/_12sdp"
            android:layout_marginEnd="@dimen/_12sdp"
            app:layout_constraintStart_toStartOf="@id/from_city_layout"
            app:layout_constraintEnd_toEndOf="@id/from_city_layout"
            android:background="@drawable/ic_to_city_layout"
            app:layout_constraintTop_toBottomOf="@id/from_city_layout">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:hint="@string/where"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:background="#00000000">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/to_city_et"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/black"
                    android:cursorVisible="false"
                    app:boxBackgroundMode="none"
                    android:inputType="textNoSuggestions"
                    android:textSize="@dimen/_13sdp"
                    android:background="#00000000"/>

            </com.google.android.material.textfield.TextInputLayout>

            <View
                android:id="@+id/open_to_cities_dialog"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </FrameLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/swap_cities_button"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:background="@drawable/ic_cities_swap_button"
            app:layout_constraintTop_toTopOf="@id/from_city_layout"
            app:layout_constraintBottom_toBottomOf="@id/to_city_layout"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="@dimen/_25sdp"/>

        <FrameLayout
            android:id="@+id/date_layout"
            android:layout_width="0dp"
            android:layout_height="@dimen/_50sdp"
            android:layout_marginTop="@dimen/_25sdp"
            android:layout_marginEnd="@dimen/_5sdp"
            app:layout_constraintStart_toStartOf="@id/search_banner"
            android:background="@drawable/ic_et_layout"
            app:layout_constraintEnd_toStartOf="@id/center_barrier"
            app:layout_constraintTop_toBottomOf="@id/to_city_layout">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:hint="@string/date"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:background="#00000000">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/date_et"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/black"
                    app:boxBackgroundMode="none"
                    android:inputType="textNoSuggestions"
                    android:textSize="@dimen/_13sdp"
                    android:background="#00000000"/>

            </com.google.android.material.textfield.TextInputLayout>

            <View
                android:id="@+id/open_date_dialog"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </FrameLayout>

        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/center_barrier"
            android:layout_width="1dp"
            android:layout_height="1dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_date"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toTopOf="@id/date_layout"
            app:layout_constraintEnd_toEndOf="@id/date_layout"
            app:layout_constraintBottom_toBottomOf="@id/date_layout"
            android:layout_marginEnd="16dp"/>

        <FrameLayout
            android:id="@+id/passenger_number_layout"
            android:layout_width="0dp"
            android:layout_height="@dimen/_50sdp"
            android:layout_marginTop="@dimen/_25sdp"
            android:background="@drawable/ic_et_layout"
            android:layout_marginStart="@dimen/_5sdp"
            app:layout_constraintStart_toStartOf="@id/center_barrier"
            app:layout_constraintEnd_toEndOf="@id/search_banner"
            app:layout_constraintTop_toBottomOf="@id/to_city_layout">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:hint="@string/passengers"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:background="#00000000">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/passenger_number_et"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/black"
                    app:boxBackgroundMode="none"
                    android:inputType="textNoSuggestions"
                    android:textSize="@dimen/_13sdp"
                    android:background="#00000000"/>

            </com.google.android.material.textfield.TextInputLayout>

            <View
                android:id="@+id/open_passenger_number_dialog"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </FrameLayout>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/appCompatImageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="16dp"
        android:src="@drawable/ic_user"
        app:layout_constraintBottom_toBottomOf="@id/passenger_number_layout"
        app:layout_constraintEnd_toEndOf="@id/passenger_number_layout"
        app:layout_constraintTop_toTopOf="@id/passenger_number_layout" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/search_trip_button"
        android:layout_width="@dimen/_275sdp"
        android:layout_height="@dimen/_40sdp"
        android:layout_marginBottom="@dimen/_25sdp"
        android:background="@drawable/ic_button_layout"
        android:text="@string/search_button"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="@dimen/_13sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/search_banner"
        app:layout_constraintStart_toStartOf="@id/search_banner" />

</androidx.constraintlayout.widget.ConstraintLayout>