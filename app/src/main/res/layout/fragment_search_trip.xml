<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="15dp"
    tools:context=".ui.search_trip.SearchTripFragment">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/search_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="23dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:textAlignment="center"
            android:textSize="16sp"
            android:text="@string/app_name"
            android:textColor="@color/bolder_text"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/search_banner"
            android:layout_width="match_parent"
            android:layout_height="190dp"
            android:src="@drawable/banner2"
            android:scaleType="fitCenter"
            app:layout_constraintTop_toBottomOf="@id/search_title"
            android:layout_marginTop="32dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@id/search_banner"
            app:layout_constraintStart_toStartOf="@id/search_banner"
            android:text="@string/main_subtitle"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:layout_marginBottom="20dp"
            android:layout_marginStart="20dp"/>

        <FrameLayout
            android:id="@+id/from_city_layout"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            app:layout_constraintTop_toBottomOf="@id/search_banner"
            android:background="@drawable/ic_from_city_layout"
            android:layout_marginTop="24dp">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:hint="@string/from"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:background="#00000000">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/from_city_et"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/black"
                    android:cursorVisible="false"
                    app:boxBackgroundMode="none"
                    android:inputType="textNoSuggestions"
                    android:textSize="16sp"
                    android:background="#00000000"/>

            </com.google.android.material.textfield.TextInputLayout>

            <View
                android:id="@+id/open_from_cities_dialog"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </FrameLayout>

        <FrameLayout
            android:id="@+id/to_city_layout"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginTop="-2dp"
            android:background="@drawable/ic_to_city_layout"
            app:layout_constraintTop_toBottomOf="@id/from_city_layout">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:hint="@string/where"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:background="#00000000">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/to_city_et"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/black"
                    android:cursorVisible="false"
                    app:boxBackgroundMode="none"
                    android:inputType="textNoSuggestions"
                    android:textSize="16sp"
                    android:background="#00000000"/>

            </com.google.android.material.textfield.TextInputLayout>

            <View
                android:id="@+id/open_to_cities_dialog"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </FrameLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/swap_cities_button"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:background="@drawable/ic_cities_swap_button"
            app:layout_constraintTop_toTopOf="@id/from_city_layout"
            app:layout_constraintBottom_toBottomOf="@id/to_city_layout"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"/>

        <FrameLayout
            android:id="@+id/date_layout"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="2.5dp"
            android:background="@drawable/ic_et_layout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/center_barrier"
            app:layout_constraintTop_toBottomOf="@id/to_city_layout">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:hint="@string/date"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:background="#00000000">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/date_et"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/black"
                    app:boxBackgroundMode="none"
                    android:inputType="textNoSuggestions"
                    android:textSize="16sp"
                    android:background="#00000000"/>

            </com.google.android.material.textfield.TextInputLayout>

            <View
                android:id="@+id/open_date_dialog"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </FrameLayout>

        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/center_barrier"
            android:layout_width="1dp"
            android:layout_height="1dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_date"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toTopOf="@id/date_layout"
            app:layout_constraintEnd_toEndOf="@id/date_layout"
            app:layout_constraintBottom_toBottomOf="@id/date_layout"
            android:layout_marginEnd="16dp"/>

        <FrameLayout
            android:id="@+id/passenger_number_layout"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/ic_et_layout"
            android:layout_marginStart="2.5dp"
            app:layout_constraintStart_toStartOf="@id/center_barrier"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/to_city_layout">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:hint="@string/passengers"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:background="#00000000">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/passenger_number_et"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/black"
                    app:boxBackgroundMode="none"
                    android:inputType="textNoSuggestions"
                    android:textSize="16sp"
                    android:background="#00000000"/>

            </com.google.android.material.textfield.TextInputLayout>

            <View
                android:id="@+id/open_passenger_number_dialog"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </FrameLayout>

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_user"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toTopOf="@id/passenger_number_layout"
            app:layout_constraintEnd_toEndOf="@id/passenger_number_layout"
            app:layout_constraintBottom_toBottomOf="@id/passenger_number_layout"
            android:layout_marginEnd="16dp"/>

         <androidx.appcompat.widget.AppCompatButton
             android:id="@+id/search_trip_button"
             android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_button_layout"
            android:text="@string/search_button"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="16sp"
             android:layout_marginBottom="32dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>