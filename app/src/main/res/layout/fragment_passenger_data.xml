<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/gray_background">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/back_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_button_back"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="21dp"
        android:layout_marginStart="24dp"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/title_passenger_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title_passenger_data"
        app:layout_constraintStart_toEndOf="@id/back_button"
        app:layout_constraintTop_toTopOf="@id/back_button"
        app:layout_constraintBottom_toBottomOf="@id/back_button"
        android:layout_marginStart="16dp"
        android:textSize="20sp"
        android:textColor="@color/bolder_text"
        android:textStyle="bold"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/trip_layout"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginTop="42dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/ic_details_layout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title_passenger_data">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/trip_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/trip_number"
        app:layout_constraintTop_toTopOf="@id/trip_layout"
        app:layout_constraintStart_toStartOf="@id/trip_layout"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:textColor="@color/black"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/trip_destination"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Алматы - НурСултан"
        app:layout_constraintTop_toTopOf="@id/trip_details_button"
        app:layout_constraintStart_toStartOf="@id/trip_layout"
        app:layout_constraintBottom_toBottomOf="@id/trip_details_button"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:textColor="@color/bolder_text"
        android:textStyle="bold"
        android:textSize="17sp"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/trip_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="24.12.2021"
        app:layout_constraintTop_toBottomOf="@id/trip_destination"
        app:layout_constraintStart_toStartOf="@id/trip_layout"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:textSize="11sp"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/trip_start_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="09:00"
        app:layout_constraintTop_toBottomOf="@id/trip_destination"
        app:layout_constraintStart_toEndOf="@id/trip_date"
        android:layout_marginStart="9dp"
        android:layout_marginTop="4dp"
        android:textSize="11sp"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/trip_details_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="32dp"
            android:text="@string/details"
            android:textColor="@color/blue_text"
            android:textSize="13sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:paddingHorizontal="15dp"
        tools:listitem="@layout/item_passenger_data"
        android:nestedScrollingEnabled="false"
        app:layout_constraintTop_toBottomOf="@id/trip_layout"
        app:layout_constraintBottom_toTopOf="@id/rules_layout"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/rules_layout"
        android:layout_width="0dp"
        android:layout_height="125dp"
        android:background="@drawable/ic_details_layout"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="28dp"
        android:paddingHorizontal="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/rules_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="12dp"
            android:text="@string/rules_title"
            android:textSize="16sp"
            android:textColor="@color/bolder_text"
            android:textStyle="bold"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/read_the_rules_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="60dp"
            android:textColorLink="@color/blue_text"
            android:text="@string/read_the_rules"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/rules_title" />

        <androidx.appcompat.widget.AppCompatCheckBox
            android:id="@+id/accept_the_rules_checkbox"
            android:layout_width="25dp"
            android:layout_height="20dp"
            android:layout_marginTop="12dp"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@id/read_the_rules_text"
            app:layout_constraintStart_toStartOf="parent"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/accept_the_rules"
            android:layout_marginStart="16dp"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@+id/accept_the_rules_checkbox"
            app:layout_constraintStart_toEndOf="@id/accept_the_rules_checkbox"
            app:layout_constraintTop_toTopOf="@+id/accept_the_rules_checkbox" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>