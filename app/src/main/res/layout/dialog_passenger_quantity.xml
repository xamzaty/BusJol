<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/close_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_cross"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="21dp"
        android:layout_marginTop="21dp"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/appCompatTextView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="21dp"
        android:text="@string/passengers"
        android:textColor="@color/bolder_text"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/close_button"
        app:layout_constraintStart_toEndOf="@id/close_button"
        app:layout_constraintTop_toTopOf="@id/close_button" />

    <View
        android:id="@+id/separator"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black"
        android:alpha="0.1"
        app:layout_constraintTop_toBottomOf="@id/close_button"
        android:layout_marginTop="21dp"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/appCompatTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="21dp"
        android:layout_marginTop="16.5dp"
        android:text="@string/passengers_tariffs"
        android:textColor="@color/bolder_text"
        android:textSize="17sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/separator" />

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/ic_layout_tariff"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appCompatTextView" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/appCompatTextView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="@string/passengers_tariffs_adult"
        android:textColor="@color/bolder_text"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/view"
        app:layout_constraintStart_toStartOf="@+id/view"
        app:layout_constraintTop_toTopOf="@+id/view" />

    <View
        android:id="@+id/button_plus_adult_tariff"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginEnd="16dp"
        android:textSize="15sp"
        android:shadowColor="@color/black"
        android:background="@drawable/ic_quantity_button"
        android:gravity="center"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@+id/view"
        app:layout_constraintEnd_toEndOf="@+id/view"
        app:layout_constraintTop_toTopOf="@+id/view"/>

    <View
        android:id="@+id/button_minus_adult_tariff"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/ic_quantity_button"
        android:gravity="center"
        android:shadowColor="@color/black"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:layout_marginEnd="32dp"
        app:layout_constraintBottom_toBottomOf="@+id/view"
        app:layout_constraintEnd_toStartOf="@+id/button_plus_adult_tariff"
        app:layout_constraintTop_toTopOf="@+id/view" />

    <ImageView
        android:layout_width="10.67dp"
        android:layout_height="0dp"
        android:src="@drawable/ic_minus"
        app:layout_constraintBottom_toBottomOf="@+id/button_minus_adult_tariff"
        app:layout_constraintEnd_toEndOf="@+id/button_minus_adult_tariff"
        app:layout_constraintStart_toStartOf="@+id/button_minus_adult_tariff"
        app:layout_constraintTop_toTopOf="@+id/button_minus_adult_tariff" />

    <ImageView
        android:layout_width="10.67dp"
        android:layout_height="0dp"
        android:src="@drawable/ic_plus"
        app:layout_constraintBottom_toBottomOf="@+id/button_plus_adult_tariff"
        app:layout_constraintEnd_toEndOf="@+id/button_plus_adult_tariff"
        app:layout_constraintStart_toStartOf="@+id/button_plus_adult_tariff"
        app:layout_constraintTop_toTopOf="@+id/button_plus_adult_tariff" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text_adult_quantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textColor="@color/bolder_text"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/button_minus_adult_tariff"
        app:layout_constraintEnd_toStartOf="@+id/button_plus_adult_tariff"
        app:layout_constraintStart_toEndOf="@+id/button_minus_adult_tariff"
        app:layout_constraintTop_toTopOf="@+id/button_minus_adult_tariff" />

    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/ic_layout_tariff"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/appCompatTextView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="@string/passengers_tariffs_child_person"
        android:textColor="@color/bolder_text"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/view2"
        app:layout_constraintStart_toStartOf="@+id/view2"
        app:layout_constraintTop_toTopOf="@+id/view2" />

    <View
        android:id="@+id/button_plus_child_tariff"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginEnd="16dp"
        android:textSize="15sp"
        android:shadowColor="@color/black"
        android:background="@drawable/ic_quantity_button"
        android:gravity="center"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@+id/view2"
        app:layout_constraintEnd_toEndOf="@+id/view2"
        app:layout_constraintTop_toTopOf="@+id/view2"/>

    <View
        android:id="@+id/button_minus_child_tariff"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/ic_quantity_button"
        android:gravity="center"
        android:shadowColor="@color/black"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:layout_marginEnd="32dp"
        app:layout_constraintBottom_toBottomOf="@+id/view2"
        app:layout_constraintEnd_toStartOf="@+id/button_plus_child_tariff"
        app:layout_constraintTop_toTopOf="@+id/view2" />

    <ImageView
        android:layout_width="10.67dp"
        android:layout_height="0dp"
        android:src="@drawable/ic_minus"
        app:layout_constraintBottom_toBottomOf="@+id/button_minus_child_tariff"
        app:layout_constraintEnd_toEndOf="@+id/button_minus_child_tariff"
        app:layout_constraintStart_toStartOf="@+id/button_minus_child_tariff"
        app:layout_constraintTop_toTopOf="@+id/button_minus_child_tariff" />

    <ImageView
        android:layout_width="10.67dp"
        android:layout_height="0dp"
        android:src="@drawable/ic_plus"
        app:layout_constraintBottom_toBottomOf="@+id/button_plus_child_tariff"
        app:layout_constraintEnd_toEndOf="@+id/button_plus_child_tariff"
        app:layout_constraintStart_toStartOf="@+id/button_plus_child_tariff"
        app:layout_constraintTop_toTopOf="@+id/button_plus_child_tariff" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text_child_quantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textColor="@color/bolder_text"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/button_minus_child_tariff"
        app:layout_constraintEnd_toStartOf="@+id/button_plus_child_tariff"
        app:layout_constraintStart_toEndOf="@+id/button_minus_child_tariff"
        app:layout_constraintTop_toTopOf="@+id/button_plus_child_tariff" />

    <View
        android:id="@+id/view3"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/ic_layout_tariff"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view2" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/appCompatTextView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="@string/passengers_tariffs_disable_person"
        android:textColor="@color/bolder_text"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/view3"
        app:layout_constraintStart_toStartOf="@+id/view3"
        app:layout_constraintTop_toTopOf="@+id/view3" />

    <View
        android:id="@+id/button_plus_disable_tariff"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginEnd="16dp"
        android:textSize="15sp"
        android:shadowColor="@color/black"
        android:background="@drawable/ic_quantity_button"
        android:gravity="center"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@+id/view3"
        app:layout_constraintEnd_toEndOf="@+id/view3"
        app:layout_constraintTop_toTopOf="@+id/view3"/>

    <View
        android:id="@+id/button_minus_disable_tariff"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/ic_quantity_button"
        android:gravity="center"
        android:shadowColor="@color/black"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:layout_marginEnd="32dp"
        app:layout_constraintBottom_toBottomOf="@+id/view3"
        app:layout_constraintEnd_toStartOf="@+id/button_plus_disable_tariff"
        app:layout_constraintTop_toTopOf="@+id/view3" />

    <ImageView
        android:layout_width="10.67dp"
        android:layout_height="0dp"
        android:src="@drawable/ic_minus"
        app:layout_constraintBottom_toBottomOf="@+id/button_minus_disable_tariff"
        app:layout_constraintEnd_toEndOf="@+id/button_minus_disable_tariff"
        app:layout_constraintStart_toStartOf="@+id/button_minus_disable_tariff"
        app:layout_constraintTop_toTopOf="@+id/button_minus_disable_tariff" />

    <ImageView
        android:layout_width="10.67dp"
        android:layout_height="0dp"
        android:src="@drawable/ic_plus"
        app:layout_constraintBottom_toBottomOf="@+id/button_plus_disable_tariff"
        app:layout_constraintEnd_toEndOf="@+id/button_plus_disable_tariff"
        app:layout_constraintStart_toStartOf="@+id/button_plus_disable_tariff"
        app:layout_constraintTop_toTopOf="@+id/button_plus_disable_tariff" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text_disable_quantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textColor="@color/bolder_text"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/button_minus_disable_tariff"
        app:layout_constraintEnd_toStartOf="@+id/button_plus_disable_tariff"
        app:layout_constraintStart_toEndOf="@+id/button_minus_disable_tariff"
        app:layout_constraintTop_toTopOf="@+id/button_plus_disable_tariff" />

</androidx.constraintlayout.widget.ConstraintLayout>